package csd;

class App {
	public static void main(String [] args)
	{	
		IsPerfectTest.run();
	}
}

class IsPerfectTest {
	public static void run()
	{
		java.util.Scanner kb = new java.util.Scanner(System.in);
		
		System.out.print("Bir sayı giriniz:");
		int val = kb.nextInt();
		
		
		if (NumberUtil.isPerfect(val))
			System.out.printf("%d sayisi mükemmel sayıdır%n", val);
		else
			System.out.printf("%d sayisi mükemmel sayı değildir%n", val);		
	}
}

class NumberUtil {
	public static boolean isPerfect(int val)
	{
		if (val == sumFactors(val))
			return true;
		
		return false;
		
	}
	public static int sumFactors(int val)
	{
		if (val <= 0)
			return -1;
		
		int total = 1;
		int a = 2;
		
		while (a < val) {
			if (val % a == 0)
				total += a;
			
			++a;
		}
		
		return total;
	}
}
